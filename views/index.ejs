<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entrar</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <div class="wrapper">
        <form action="/loginUser" method="POST" class="form">
            <h1>Login</h1>
            <div class="input-box">
                <input type="text" id="cpf" name="cpf" placeholder="CPF - apenas números" maxLength="11" required>
            </div>
            <div class="input-box">
                <input type="password" id="password" name="password" placeholder="Senha" required>
            </div>
            <div class="remember-forget">
                <input type="checkbox" id="remember"><label for="remember">Lembre-se de mim</label>
                <a href="/recovery">Esqueceu a senha?</a>
            </div>
            <div class="termos_uso">
                <a href="/termos">Acesse os termos de uso</a>
            </div>
            <button type="submit" class="btn" onclick="genLocalStorage()">Login</button>
            <div class="register-link">
                <p>Não tem uma conta? <a href="/registerUser">Cadastra-se</a></p>
            </div>
        </form>
    </div>
</body>
<script>
    document.getElementById("cpf").value = localStorage.getItem("cpf");

    function genLocalStorage(){
        let cpf = document.getElementById("cpf").value;

        let remember = document.getElementById("remember");
        if(remember.checked){
            localStorage.setItem("cpf", cpf);
        }
    }
</script>
</html>